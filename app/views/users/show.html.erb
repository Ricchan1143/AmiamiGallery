<h1>マイページ</h1>
<p>ニックネーム : <%= current_user.Nickname %></p>
<p>メールアドレス : <%= current_user.email %></p>

<% if current_user.id == current_user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>いいねしたアイテム</h2>
<% current_user.liked_items.each do |t| %>
  <%= image_tag t.image_url, size: "250x200" %>
  <p><%= t.name %></p>
  <p><%= link_to "View more", item_path(t.id) %></p>
<% end %>

<div><%= link_to "アイテム一覧に戻る", items_path %>

</div>