<h3>新規投稿</h3>
<%= form_for @item do |f| %>

<div class="field">
	<%= f.label :作品名 %>
	<br>
    <%= f.text_field :name, :size => 30 %>
</div>

<div class="field">
	<%= f.label :説明  %>
	<br>
	<%= f.text_area :about, :size => "30x2" %>
</div>

<div class="field">
	<%= f.label :素材・質感 %>
	<br>
    <%= f.text_field :material, :size => 30 %>
</div>

<div class="field">
	<%= f.label :image %>
	<%= f.file_field :image %>
</div>


<%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", items_path %>