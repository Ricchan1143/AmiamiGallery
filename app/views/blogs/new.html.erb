<h3>新規投稿</h3>
<%= form_for @blog do |f| %>

<div class="field">
	<%= f.label :タイトル %>
	<br>
    <%= f.text_field :title, :size => 30 %>
</div>

<div class="field">
	<%= f.label :内容  %>
	<br>
	<%= f.text_area :content, :size => "30x2" %>
</div>

<div class="field">
	<%= f.label :画像 %>
	<%= f.file_field :image %>
</div>


<%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", blogs_path %>